{
    "env": {
        "total_episodes": 1000,
        "n_max_steps": 3000,
        "episode_batch": 100
    },
    "data_config": {
        "exchange": "kraken",
        "symbol": "ETHUSD",
        "input_data_dir": "./data",
        "start_date_ymd": "20230301",
        "end_date_ymd": "20230401",
        "data_length_days": 10,
        "data_step": 1,
        "split_ratio": 0.9,
        "output_data_dir": "/tmp/output/batch_run",
        "candle_size_minutes": 15
    },
    "features": {
        "OHLCV": {
            "close": [
                {
                    "feature_name": "Log Price movement",
                    "feature_type": "LOG_PRICE",
                    "feature_params": {
                        "dimension": 10,
                        "normalize_value": 0.02
                    }
                },
                {
                    "feature_name": "SMA Cross indicator",
                    "feature_type": "SMA_CROSS",
                    "feature_params": {
                        "dimension": 5,
                        "sma_window_1": 10,
                        "sma_window_2": 50
                    }
                },
                {
                    "feature_name": "RSI indicator",
                    "feature_type": "RSI",
                    "feature_params": {
                        "dimension": 5,
                        "rsi_window": 14
                    }
                }
            ],
            "volume": [
                {
                    "feature_name": "Log Volume movement",
                    "feature_type": "LOG_PRICE",
                    "feature_params": {
                        "dimension": 10,
                        "normalize_value": 5
                    }
                }
            ]
        }
    },
    "agent": {
        "learning_rate": 0.01,
        "gamma": 0.9,
        "epsilon": 0.1,
        "savefig_folder": "_static/img/test/",
        "savemodel_folder": "_static/model/test/",
        "start_epsilon": 1.0,
        "min_epsilon": 0.05,
        "decay_rate": 0.001,
        "save_best_only": true
    },
    "pnl_config": {
        "roi": {
            "7200": 0.0,
            "1440": 0.02,
            "720": 0.03,
            "0": 0.04
        },
        "stoploss": -0.02,
        "fixed_unit_amount": 10,
        "enable_short_position": false,
        "max_position_per_symbol": 1,
        "fee_rate": 0.1
    },
    "model_param": {
        "meta": {
            "name": "simple_dnn",
            "type": "DNN"
        },
        "data": {
            "input_feacture_dim": 30,
            "first_layer_struct": { "units": 30, "activation": "relu" },
            "mid_layers_struct": [
                { "units": 30, "activation": "relu" },
                { "units": 20, "activation": "relu" },
                { "units": 10, "activation": "relu" }
            ],
            "output_layer_struct": { "units": 3, "activation": "linear" }
        }
    }
}
